<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/titles4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="My Tournaments"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.130"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="355dp"
        android:layout_marginTop="172dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="The Ocean Course Championship"
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space7"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="05 / 20 / 2024"
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Star Time:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space8"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="10:00 A.M."
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/category2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space9"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="B"
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/space10"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="$300"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="82dp"
        android:backgroundTint="#248A3D"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>